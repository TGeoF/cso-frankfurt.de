---
import ConcertText from "@components/ConcertText.astro";

import { KonzertFields } from "@lib/types";
import ImageAndTextColumns from "./ImageAndTextColumns.astro";

interface Props {
	konzert: KonzertFields;
	imageSide?: "left" | "right";
}

const { konzert, imageSide } = Astro.props as Props;
---

{
	konzert.flyer ? (
		<ImageAndTextColumns
			src={konzert.flyer.fields.file.url as string}
			alt="Konzertflyer des CSO Frankfurt"
			imageSide={imageSide ? imageSide : "right"}
		>
			<ConcertText konzert={konzert} />
		</ImageAndTextColumns>
	) : (
		<ConcertText konzert={konzert} />
	)
}
