---
const image = Astro.props;
---

<style>

.image {
  border-radius: 10px;
  box-shadow: 0 0 5px 2px lightgrey;
}

.wrapper {
  display: flex;
  align-items: center;
}

.image-wrapper {
  display: block;
  margin: auto;
  width: fit-content;

}

.text {
  padding: 1rem;
  width: fit-content;
}

@media screen and (max-width: 1100px) {
  .wrapper {
    flex-direction: column;
    align-items:stretch;
  }
  .text {
    padding: 0
  }
}

</style>

<div class="wrapper">
  <div class="text">
    <p>
      <slot />
    </p>
  </div>
  <div class="image-wrapper">
  <img class="image" src={image.src} alt={image.alt} /></div>
</div>